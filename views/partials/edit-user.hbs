<div
  id="Form1" class="sticky top-0 border-gray-200 w-full backdrop-blur-xl bg-white/30"
>

</div>
<main class="relative">
  <form action="/user/edit/{{user._id}}" method="post" encType="multipart/form-data">
    <div>
      <img
        class="w-full"
        src="{{user.coverimage}}"
        id="cover"
        alt="Cover image"
        id="coverimage"
      />
      <label class="cursor-pointer absolute top-6 right-8 p-3 bg-blue-50 font-semibold text-sm border-blue-100 border-4 border-dashed rounded-xl" for="coverimage">Change cover image</label>
        <input type="file" name="coverimage" id="coverimage" class="relative bottom-4" oninput="coverimage.src=window.URL.createObjectURL(this.files[0])" hidden />
    </div>
    <div
      class="relative z-30 h-[300px] flex-col p-5 border-gray-200"
    >

      <div class="relative top-[-60px] sm:top-[-85px] xl:top-[-80px]">
        <img
          class="w-20 h-20 md:w-32 md:h-32 lg:w-32 lg:h-32 xl:w-42 xl:h-42 border-4 border-white rounded-full mb-6"
          src="{{user.profilePicture}}"
          id="avatar"
          alt=""
          id="profileimage"          
        />
        <label class="cursor-pointer relative bottom-8 p-3 bg-blue-50 font-semibold text-sm border-blue-100 border-4 border-dashed rounded-xl" for="image">change profile</label>
        <input type="file" name="image" id="image" class="relative bottom-4" oninput="profileimage.src=window.URL.createObjectURL(this.files[0])" hidden />
        <div class="flex space-x-4">
            <div  class="w-full">
                <label for="displayname" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Displayname</label>
                <input type="text" name="displayname" id="displayname" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Displayname" value="{{user.displayname}}">
            </div>
            <div  class="w-full  mb-2">
                <label for="username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Username</label>
                <input type="text" name="username" id="username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Displayname" value="{{user.username}}">
            </div>
        </div>
        <div  class="w-full mb-2">
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Email</label>
                <input type="text" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Displayname" value="{{user.email}}">
            </div>
        <div>
            <label for="bio" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Biography</label>
            <textarea name="bio" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="A short bio about yourself..">{{user.bio}}</textarea>
        </div>
        <div class="flex space-x-4">
            <div class="w-full">
                <label for="city" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">City</label>
                <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" name="city" value="{{user.city}}"></input>
            </div>
            <div class="w-full">
                <label for="website" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Website</label>
                <input class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" name="website" value="{{user.website}}"></input>
            </div>
        </div>
        <div class="flex justify-center space-x-4 text-gray-500 text-lg mb-4">
        </div>
<p class="text-red-500">{{error}}</p>
    <input type="submit" class="cursor-pointer text-white bg-green-500 hover:bg-green-600 focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-green-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" value="Save profile">
  </form>
    <form action="/user/delete/{{user._id}}" method="post">
        <input type="submit" class="cursor-pointer text-white bg-red-500 hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" value="Delete profile">
    </form>
      </div>
    </div>
</main>